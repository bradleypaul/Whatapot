    "bootstrap": "^4.5.2",
    "if-env": "^1.0.4",
    "jwt-decode": "^2.2.0",
    "react-bootstrap": "^1.3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^1.2.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0"
  }
